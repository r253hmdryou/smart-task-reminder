{
  "name": "@smart-task-reminder/root",
  "private": true,
  "workspaces": [
    "packages/web",
    "packages/backend",
    "packages/common",
    "packages/api-client"
  ],
  "scripts": {
    "generate-api-client": "npm run generate -w @smart-task-reminder/api-client",
    "prisma:generate": "run-p prisma:generate:*",
    "prisma:generate:container": "docker compose exec backend npm run prisma:generate -w @smart-task-reminder/backend",
    "prisma:generate:local": "npm run prisma:generate -w @smart-task-reminder/backend",
    "prisma:push": "run-s prisma:push:container prisma:generate:local",
    "prisma:push:container": "docker compose exec backend npm run prisma:push -w @smart-task-reminder/backend",
    "prisma:migrate:container": "docker compose exec backend npm run prisma:migrate -w @smart-task-reminder/backend",
    "prisma:deploy:container": "docker compose exec backend npm run prisma:deploy",
    "prisma:deploy": "npm run prisma:deploy -w @smart-task-reminder/backend",
    "start:dev": "run-p start:dev:*",
    "start:dev:api-client": "npm run start:dev -w @smart-task-reminder/api-client",
    "start:dev:common": "npm run start:dev -w @smart-task-reminder/common",
    "start:dev:web": "npm run start:dev -w @smart-task-reminder/web",
    "start:dev:backend": "npm run start:dev -w @smart-task-reminder/backend",
    "lint": "run-p lint:*",
    "lint:backend": "npm run lint -w @smart-task-reminder/backend",
    "lint:web": "npm run lint -w @smart-task-reminder/web",
    "format": "run-p format:check:*",
    "format:check:backend": "npm run format -w @smart-task-reminder/backend",
    "format:check:web": "npm run format -w @smart-task-reminder/web",
    "format:fix": "run-p format:fix:*",
    "format:fix:backend": "npm run format:fix -w @smart-task-reminder/backend",
    "format:fix:web": "npm run format:fix -w @smart-task-reminder/web"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2"
  }
}
