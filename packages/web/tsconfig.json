{
  "compilerOptions": {
    "lib": ["DOM", "es2023"],
    "module": "node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",

    "jsx": "react-jsx",
    "rootDir": "src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@smart-task-reminder/common": ["../common/dist"],
      "@smart-task-reminder/api-client": ["../api-client/dist"]
    }
  }
}
